@using DMSTask.Domain.Entities
@model DeviceCategory
@{
    ViewData["Title"] = "Edit Category";
}

<h1>Edit Category</h1>
<div class="container">
    <h1 class="my-5 text-center">Category</h1>
    <form asp-action="Update" method="post" class="w-50 mx-auto">
        <div class="mb-3">
            <label for="CategoryName" class="form-label">Category Name</label>
            <input type="text" class="form-control" placeholder="Enter Category Name" asp-for="CategoryName">
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>

        <div class="text-center my-5">
            <a asp-action="Index" class="btn btn-warning">Back</a>
            <button type="submit" class="btn btn-success mx-3">Save Changes</button>
        </div>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}