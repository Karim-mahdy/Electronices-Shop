@using DMS_Task.ViewModels;
@model IEnumerable<DeviceProperteiseValuesVM>

@{
    ViewData["Title"] = "Devicies List";
}

<h1 class="text-center mt-5 text-warning">Devicies List</h1>
<div class="container mt-5">
    <a asp-action="Create" class="btn btn-success mb-3">Create Device</a>
    <table class="table align-middle table-hover">
        <thead class="table-warning">
            <tr class="text-center">
                <th>ID</th>
                <th>Device Name</th>
                <th>Acquisition Date</th>
                <th>Memo</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.DeviceName</td>
                    <td>@item.AcquisitionDate</td>
                    <td>@item.Memo</td>
                    <td>@item.CategoryName</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-primary mx-2">
                            Edit
                        </a>
                       
                        <a asp-action="Remove" asp-route-id="@item.ID" class="btn btn-danger mx-2" disabled>
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
